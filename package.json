{
	"name": "test-deploy",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"next": "16.0.0",
			"zod": "^4.1.12",
			"@trpc/server": "^11.5.0",
			"@trpc/client": "^11.5.0",
			"ai": "^5.0.49",
			"@ai-sdk/google": "^2.0.13",
			"better-auth": "^1.3.28",
			"drizzle-orm": "^0.44.2",
			"dotenv": "^17.2.2",
			"tsdown": "^0.15.5"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @test-deploy/db db:push",
		"db:studio": "turbo -F @test-deploy/db db:studio",
		"db:generate": "turbo -F @test-deploy/db db:generate",
		"db:migrate": "turbo -F @test-deploy/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"@types/node": "^22.13.11"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.19"
}
